# Kafka Configuration
KAFKA_BROKERS=kafka:9092
KAFKA_ENABLED=true
KAFKA_CLIENT_ID=ai-infra-backend
KAFKA_GROUP_ID=ai-infra-services

# AI Assistant Configuration
AI_ASSISTANT_ENABLED=true
AI_ASSISTANT_KAFKA_ENABLED=true

# Message Queue Configuration
MESSAGE_QUEUE_TYPE=kafka  # redis or kafka
MESSAGE_QUEUE_KAFKA_ENABLED=true

# Kafka Topics Configuration
KAFKA_TOPIC_AI_CHAT_MESSAGES=ai-chat-messages
KAFKA_TOPIC_AI_MESSAGE_EVENTS=ai-message-events
KAFKA_TOPIC_AI_MESSAGE_CACHE=ai-message-cache

# Kafka Consumer Configuration
KAFKA_CONSUMER_GROUP_AI_SERVICES=ai-infra-services
KAFKA_CONSUMER_GROUP_MESSAGE_PROCESSORS=ai-message-processors

# Kafka Producer Configuration
KAFKA_PRODUCER_ACKS=all
KAFKA_PRODUCER_RETRIES=3
KAFKA_PRODUCER_BATCH_SIZE=16384
KAFKA_PRODUCER_LINGER_MS=5

# Kafka Message Retention
KAFKA_MESSAGE_RETENTION_HOURS=168  # 7 days
KAFKA_MESSAGE_RETENTION_BYTES=10737418240  # 10GB

# Kafka Performance Tuning
KAFKA_NUM_PARTITIONS=3
KAFKA_REPLICATION_FACTOR=1
KAFKA_MIN_INSYNC_REPLICAS=1
