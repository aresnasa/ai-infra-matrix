# 应用配置
PORT=8082

# 数据库配置
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=ai_infra_matrix
DB_SSLMODE=disable

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=ansible-redis-password
REDIS_DB=0

# JWT密钥（生产环境请更改）
JWT_SECRET=your-secret-key-change-in-production

# LDAP配置
LDAP_ENABLED=false
LDAP_HOST=ldap.example.com
LDAP_PORT=389
LDAP_BIND_DN=cn=admin,dc=example,dc=com
LDAP_BIND_PASSWORD=admin_password
LDAP_BASE_DN=dc=example,dc=com
LDAP_USER_FILTER=(uid=%s)
LDAP_USER_ATTR=uid
LDAP_EMAIL_ATTR=mail
LDAP_NAME_ATTR=cn

# 日志级别
LOG_LEVEL=info

# 对象存储（SeaweedFS）配置
# 这些变量用于后端对象存储模块的默认配置与健康检查/控制台地址
SEAWEEDFS_MASTER_URL=http://seaweedfs-master:9333
SEAWEEDFS_FILER_URL=http://seaweedfs-filer:8888
SEAWEEDFS_S3_PORT=8333
SEAWEEDFS_S3_ACCESS_KEY=seaweedfs_admin
SEAWEEDFS_S3_SECRET_KEY=seaweedfs_secret_key_change_me
SEAWEEDFS_JWT_SECRET=your_jwt_secret_change_me
SEAWEEDFS_CONSOLE_URL=${EXTERNAL_SCHEME:-http}://${EXTERNAL_HOST:-localhost}:${EXTERNAL_PORT:-8080}/seaweedfs/

# SaltStack API 配置
# 完整URL方式（推荐）
SALTSTACK_MASTER_URL=http://salt-master:8000
# 或者分别配置（如果 SALTSTACK_MASTER_URL 未设置则使用以下配置）
SALT_API_SCHEME=http
SALT_MASTER_HOST=salt-master
SALT_API_PORT=8000
# 认证配置
SALT_API_USERNAME=saltapi
SALT_API_PASSWORD=saltapi123
SALT_API_EAUTH=file
# 超时配置（可选，默认 8s）
SALT_API_TIMEOUT=8s
