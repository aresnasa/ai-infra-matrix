# Production Environment Configuration for Docker/K8s
# Copy this file to .env and modify as needed

# Application Configuration
PORT=8082

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=ansible_playbook_generator
DB_SSLMODE=disable

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=ansible-redis-password
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production

# Log Configuration
LOG_LEVEL=info

# LDAP Server Configuration
LDAP_ENABLED=true
LDAP_SERVER=openldap
LDAP_PORT=389
LDAP_USE_SSL=false
LDAP_START_TLS=false
LDAP_BIND_DN=cn=admin,dc=test,dc=com
LDAP_BIND_PASSWORD=admin123
LDAP_BASE_DN=dc=test,dc=com

# LDAP User Search Configuration
LDAP_USER_FILTER=(uid=%s)
LDAP_GROUP_FILTER=(member=%s)
LDAP_USER_ID_ATTR=uid
LDAP_USER_NAME_ATTR=cn
LDAP_EMAIL_ATTR=mail
LDAP_ADMIN_GROUPS=cn=admins,ou=groups,dc=test,dc=com

# LDAP User Search Base
LDAP_USER_SEARCH_BASE=ou=test,dc=test,dc=com
LDAP_GROUP_SEARCH_BASE=ou=groups,dc=test,dc=com

# LDAP Initialization Configuration (for init program)
INIT_LDAP=true
LDAP_INIT_RETRY_COUNT=30
LDAP_INIT_RETRY_INTERVAL=2

# LDAP Organizational Units
LDAP_PEOPLE_OU=test
LDAP_GROUPS_OU=groups

# LDAP Test Users Configuration
LDAP_ADMIN_USER_UID=ldap-admin
LDAP_ADMIN_USER_PASSWORD=admin123
LDAP_ADMIN_USER_EMAIL=ldap-admin@test.com
LDAP_ADMIN_USER_CN=LDAP Administrator
LDAP_ADMIN_USER_SN=Administrator
LDAP_ADMIN_USER_GIVEN_NAME=LDAP
LDAP_ADMIN_USER_UID_NUMBER=1001
LDAP_ADMIN_USER_GID_NUMBER=1001
LDAP_ADMIN_USER_HOME_DIR=/home/ldap-admin

LDAP_REGULAR_USER_UID=ldap-user
LDAP_REGULAR_USER_PASSWORD=user123
LDAP_REGULAR_USER_EMAIL=ldap-user@test.com
LDAP_REGULAR_USER_CN=LDAP User
LDAP_REGULAR_USER_SN=User
LDAP_REGULAR_USER_GIVEN_NAME=LDAP
LDAP_REGULAR_USER_UID_NUMBER=1002
LDAP_REGULAR_USER_GID_NUMBER=1002
LDAP_REGULAR_USER_HOME_DIR=/home/ldap-user

# LDAP Groups Configuration
LDAP_ADMIN_GROUP_CN=admins
LDAP_USER_GROUP_CN=users
